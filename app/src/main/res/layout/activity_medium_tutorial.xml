<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/_1_LceeWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="1. LceeWidget" />

        <Button
            android:id="@+id/_2_UpdateStrategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="2. UpdateStrategy" />

        <Button
            android:id="@+id/_3_LceermWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="3. LceermWidget" />

        <Button
            android:id="@+id/_4_LceeRmWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="4. LceeRmWidget" />

        <Button
            android:id="@+id/_5_Retryable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="5. Retryable" />

        <Button
            android:id="@+id/_6_Cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="6. Cache" />

        <Button
            android:id="@+id/_7_StartActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="7. StartActivity" />

        <Button
            android:id="@+id/_8_Xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="8. Xml" />

    </LinearLayout>

</ScrollView>